@import "/wxParse/wxParse.wxss";
.xitong{
    flex: 1;
    display: flex;
    flex-direction: column;
}
.xitong-content{
    margin: 20rpx 0 0 0;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background: #f4f4f4;
    flex:1;
    
}
.xitong-container .xitong-content .xitong{
    display: flex;
    flex-direction: column;
    flex: 1;
}
.xitong-type-menu{
    flex: 1;
    overflow: hidden;
    justify-content: space-between;
    display: flex;
    margin: 20rpx 0 0 0;
}
.xitong-type-uls{
    overflow: hidden;
    background: #ffffff;
    width: 160rpx;
    height: vh100;

}
.xitong-type-uls .lis{
    width: 100%;
    border-bottom: 1rpx solid #e4e4e4;
}
.xitong-type-uls .activeLis{
    padding: 20rpx;
    color: #666666;
    display: flex;
    background:  #f4f4f4;
    border-left: 2px solid #1C82F8;
}
.xitong-type-uls .lis text, .xitong-type-uls .activeLis{
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #333333;
    padding: 20rpx 0;
    display: block;
}

.xitong-content-menu{
    flex: 1;
    padding: 0 20rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}
.xitong-content-menu .xitong-uls{
    width: 100%;
    display: flex;
    flex-direction: column;
    flex:1;

}
.xitong-content-menu .xitong-uls .lis{
    color: #666666;
    display: flex;
    margin: 0 0 20rpx 0;
    flex-direction: column;
    flex:1;

}
.home-content{
    background:#ffffff;
    display:flex;
    justify-content:space-between;
    padding: 20rpx;
    align-items: center;
    margin: 0 0 20rpx 0;
}
.home-content-left{
    display: flex;
}
.home-content-left image{
    height: 80px;
    width: 100px;
}
.home-content-left text{
    font-size: 28rpx;
    margin: 0 0 0 10rpx;
}
.home-content button{
    border: none;
    color: #999999;
    font-size: 28rpx;
    margin: 0;
    padding:0;
    width:80rpx;
}
.xitong-content-menu .xitong-uls .lis:last-child{
    border: none
}
.xitong-content-menu .xitong-uls .lis .xitong-image{
    width: 160rpx;
    height: 160rpx;
    margin: 0 20rpx 0 0;
    font-size: 0;
}
.xitong-content-menu .xitong-uls .lis .right{
    display: flex;
    flex-direction: column;
    flex: 1;

}
.xitong-uls .lis .right .title{
    color: #333333;
    font-size: 28rpx;
    height: 20rpx;
}
.xitong-uls .lis .right .content{
    color: #999999;
    flex: 1;
    font-size: 24rpx;
    line-height:1.3;
    padding:20rpx 0;
    text-align:left;

}
.xitong-uls .lis .right .details{
    height: 40rpx;
    display: flex;
}
.xitong-uls .lis .right .details .money{
    margin: 0 20rpx 0 0;
    vertical-align: text-top;
    font-size: 24rpx;
    color: "#1C82F8"
}
.xitong-uls .lis .right .details .numers{
    vertical-align: text-top;
    font-size: 24rpx;
    color: "#1C82F8"
}
.xitong-uls .lis .right .details .money image, .xitong-uls .lis .right .details .numers image{
    width: 32rpx;
    height: 32rpx;
    vertical-align: text-top;
    margin: 0 10rpx 0 0 
}

.xitong-menu{
    height: 100%;
    flex: 1;
}
.xitong-menu-ul{
    padding: 0rpx 0 0rpx 30rpx; 
    font-size: 0;  
}
.xitong-menu-ul .xitong-menu-li{
    border-bottom: 1rpx solid #e4e4e4;
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
}
.xitong-content .xitong-menu-ul:last-child .xitong-menu-li{
    border: none
}
::-webkit-scrollbar
{
    width: 6rpx;
    height: 6px;
    background-color: transparent;
}
/*定义滚动条轨道 内阴影+圆角*/
.xitong-uls::-webkit-scrollbar-track
{
    border-radius: 10px;
    background-color: transparent;
}
/*定义滑块 内阴影+圆角*/
.xitong-uls::-webkit-scrollbar-thumb
{
    border-radius: 10px;
    background-color: #e4e4e4;
}
.xitong-menu-li image{
    width: 200rpx;
    height: 200rpx;
}
.chooseImage-add{
    display: flex;
    background: #ffffff;
    padding: 20rpx;
    margin: 0 0 20rpx 0;
}
.chooseImage{
    width: 160rpx;
    height: 160rpx;
    border: 1rpx solid #e4e4e4;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    background: #ffffff;
}
.chooseImage image{
    width: 60rpx;
    height: 60rpx;
}
form .section{
    display: flex;
    margin: 0 0 20rpx 0;
    font-size: 28rpx;
    padding: 20rpx;
    align-items:center;
    background: #ffffff;
}
form .section label{
    color: #333333;
    padding: 0 6rpx;

}
form .section input{
    color: #000000;
    padding:6rpx;

}
.xitong-uls .no-more{
    height: vh100;
    background: #fff;
}

.news-home-content-left{
    display: flex;
    flex-direction: column;

}
.news-home-content-left title{
    margin: 0 0 16rpx 0;
}
.news-editor-contaner textarea{
    min-height: 240rpx;
}
.section-yulan{
    display: flex;
    margin: 0 0 20rpx 0;
    font-size: 28rpx;
    padding: 20rpx;
    align-items:center;
    background: #ffffff;
    flex-direction: column;
}
.section-yulan .conpoment-title{
    width: 100%;
}
.editor-image{
    display:flex;
    justify-content:left;
    margin:0;
    background:#ffffff;
    align-items: center;
}
.editor-image image{
    width:80rpx;
    height:60rpx;
}
.editor-image .br{
    margin:0 0 0 20rpx;
    border-radius: 10rpx;
}
.news-editor-yulan{
    width: 100%;
}
.news-editor-yulan .line{
    display: block;
    width: 100%;
}
.wxParse-div .newImage{
    width: 100%;
    height: 300rpx;
}
.logo-add{
    display: flex;
    background: #ffffff;
    padding: 0 20rpx;
}