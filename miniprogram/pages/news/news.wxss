.news{
    min-height: 100%;
    display: flex;
    background: #f4f4f4;
    flex: 1;
    justify-content: center
}
.no-more{
    display: flex;
    flex: 1;
    align-items: center;
    align-self: center;
    width: 100%;
    text-align: center;
    margin: 0 auto;
}
.no-more .box image{
    width: 260rpx;
    height: 260rpx;
    margin: 0 auto;
}
.no-more .box{
    color: #999999;
    font-size: 30rpx;
    text-align: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    letter-spacing: 4rpx;
}

.content-news{
    margin: 0 0 30rpx 0; 
    width:100%;
    background:#fff;
}
.content-news-header{
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    border-bottom: 1rpx solid #e4e4e4;
    font-size: 28rpx;
}
.content-news-title-right{
    color: #999999;
}

.content-news-menu{
    padding: 0 0 0 30rpx;
}
.content-news-menu-li{
    padding: 30rpx 30rpx 30rpx 0; 
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #e4e4e4;
}


.content-news-menu-li  .time{
    color: #999999;
    font-size: 24rpx;
}
.swipers-items{
    width: 100%;
}