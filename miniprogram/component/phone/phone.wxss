.shadow{
    box-shadow: 0 0 30rpx 0 rgba(0,0,0,1);
}
.phone{
    color: #8c8c8c;
    background-color: #fff;
    box-shadow: 0 0 30rpx 0 rgba(0,0,0,1.3);
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 6px;
    display: flex;
    border-radius: 50%;
    text-align: center;
    cursor: pointer;
    opacity: .9;
    align-items: center;
    justify-content: center;
    position: fixed;
    right: 60rpx;
    bottom: 50rpx
}
.phone .image{
    width: 50rpx;
    height: 50rpx;  
}